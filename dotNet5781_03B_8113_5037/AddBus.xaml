    <Grid x:Name="grid1"  HorizontalAlignment="Stretch" Margin="31,93,3.333,0" VerticalAlignment="Top" Height="168">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0"/>
            <ColumnDefinition Width="199.333"/>
            <ColumnDefinition Width="Auto" MinWidth="159.333"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="32"/>
        </Grid.RowDefinitions>

        <Label Content="date:" Grid.Column="1" HorizontalAlignment="Left" Margin="2.333,3,0,3" Grid.Row="1" VerticalAlignment="Center" Height="26" Width="36"/>
        <DatePicker x:Name="dateDatePicker" Grid.Column="2" HorizontalAlignment="Left" Margin="2,3,0,3" Grid.Row="1" VerticalAlignment="Center" Height="26" Width="120"/>

        <Label Content="last date treatment:" Grid.Column="1" HorizontalAlignment="Left" Margin="2.333,3,0,3" Grid.Row="2" VerticalAlignment="Center" Height="26" Width="159"/>
        <DatePicker x:Name="date_treatmentDatePicker" Grid.Column="2" HorizontalAlignment="Left" Margin="2,3,0,3" Grid.Row="2" VerticalAlignment="Center" Height="26" Width="120"/>

