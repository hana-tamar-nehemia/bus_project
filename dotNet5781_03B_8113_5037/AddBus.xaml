        <Label Content="Licens plate:" Grid.Column="1" PreviewKeyDown="TextBox_OnlyNumbers_PreviewKeyDown" HorizontalAlignment="Left" Margin="2.333,3,0,3" Grid.Row="0" VerticalAlignment="Center" Height="26" Width="75"/>
        <TextBox x:Name="licens_plateTextBox"  MaxLength="8" MinHeight="7"  Grid.Column="2" HorizontalAlignment="Left" Height="24" Margin="2,4,0,4" Grid.Row="0" VerticalAlignment="Center" Width="120"  />

        <Label Content="please enter details for the new bus" HorizontalAlignment="Left" Margin="51.333,-72,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Grid.Column="1" Width="221" Height="26"/>
        <Button Content="done"  IsEnabled="True" Grid.Column="1" HorizontalAlignment="Left" Margin="114.333,56,0,-45" VerticalAlignment="Top" Width="75" Click="Button_Click" Height="21" Grid.Row="4"/>
    </Grid>

</Window>