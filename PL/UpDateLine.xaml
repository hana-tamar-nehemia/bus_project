<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        xmlns:BO="clr-namespace:BO;assembly=BL" x:Class="PL.UpDateLine"
        mc:Ignorable="d"
        Title="UpDateLine" Height="300" Width="300" >
    <Window.Resources>
        <DataTemplate x:Key="My_Stations"
            DataType="local:LineStation">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="25" />
                    <ColumnDefinition Width="25" />
                    <ColumnDefinition Width="25" />
                    <ColumnDefinition Width="25" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="{Binding Path=Code}"  FontWeight="Bold" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
                <TextBlock Grid.Column="1" Text="{Binding Path=Name}"  FontWeight="Bold" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
                <Button  x:Name="change_distance" Grid.Column="2" Content="שנה מרחק/זמן " FontWeight="Bold" Click="Button_Click_2"   VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
                <Button  x:Name="remove" Grid.Column="3" Content="מחק תחנה" Click="Button_Click_1"  FontWeight="Bold" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"  />
            </Grid>
        </DataTemplate>
    </Window.Resources>
    
    <Grid Margin="0,0,0.333,-0.333" Height="221" VerticalAlignment="Bottom">
        <TextBlock x:Name="line_num" HorizontalAlignment="Left" Height="23" Margin="52,-15,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="62" />
        <Label Content="line:" HorizontalAlignment="Left" Margin="15,-18,0,0" VerticalAlignment="Top"/>
        <Label Content="Area:" HorizontalAlignment="Left" Margin="10,14,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.491,0.064"/>
        <ComboBox Name="area_combox" HorizontalAlignment="Left" Margin="46,18,0,0"  VerticalAlignment="Top" Width="120" SelectionChanged="area_combox_SelectionChanged"/>
        <ListBox x:Name="list_of_station" HorizontalAlignment="Left" Height="130" Margin="45,55,0,0" VerticalAlignment="Top" Width="238" DataContext="{Binding}"  ItemTemplate="{StaticResource ResourceKey=My_Stations}" ItemsSource="{Binding}"  />
        <Label Content="Phat:" HorizontalAlignment="Left" Margin="10,55,0,0" VerticalAlignment="Top"/>
        <Button Content="Update" HorizontalAlignment="Left" Margin="109,190,0,0" VerticalAlignment="Top" Width="75" Click="update_click"/>
    </Grid>
</Window>
